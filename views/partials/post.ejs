    <p class="post-text"><%= texto %></p>

    <% if (createdAt) { %>
        <small class="post-date"><%= new Date(createdAt).toLocaleString("pt-BR", { timeZone: "America/Sao_Paulo" }) %></small>
    <% } %>

    <div class="post-actions">
        <button 
            class="like-btn <%= userCurtiu ? 'liked' : '' %>"
            data-post-id="<%= _id %>"
            data-curtiu="<%= userCurtiu %>">
            <i class="<%= userCurtiu ? 'fas' : 'far' %> fa-heart"></i>
            <span class="like-count"><%= totalLikes %></span>
        </button>

        <button 
            class="load-comments-btn" 
            data-post-id="<%= _id %>" 
            onclick="loadComments("<%= _id %>")">
            <i class="fas fa-comments"></i>
            Ver comentários
        </button>
        
        <button 
            class="close-comments-btn" 
            data-post-id="<%= _id %>" 
            onclick="closeComments("<%= _id %>")">
            <i class="fas fa-times-circle"></i>
            Fechar comentários
        </button>
    </div>

    <ul class="comentarios hidden" id="comentarios-<%= _id %>">
        <!-- Os comentários serão carregados dinamicamente -->
    </ul>

    <form class="form-comentario" data-post-id="<%= _id %>">
        <input type="text" name="texto" placeholder="Comente algo..." required>
        <label for="anonimo-<%= _id %>">
            <input type="checkbox" name="anonimo" id="anonimo-<%= _id %>">
            Comentar como anônimo
        </label>
        <button type="submit"><i class="fas fa-paper-plane"></i> Enviar Comentário</button>
    </form>

