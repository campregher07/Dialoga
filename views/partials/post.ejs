<li>
    <p><%= texto %></p>

    <% if (createdAt) { %>
        <small><%= new Date(createdAt).toLocaleString('pt-BR', { timeZone: "America/Sao_Paulo" }) %></small>
    <% } %>

    <!-- Botões para carregar e fechar comentários -->
    <div style="margin: 10px 0;">
        <button 
            class="load-comments-btn" 
            data-post-id="<%= _id %>" 
            onclick="loadComments('<%= _id %>')">
            Ver comentários
        </button>
        
        <button 
            class="close-comments-btn" 
            data-post-id="<%= _id %>" 
            onclick="closeComments('<%= _id %>')"
            style="display: none;">
            Fechar comentários
        </button>
    </div>

    <!-- Lista de comentários (inicialmente oculta) -->
    <ul class="comentarios hidden" id="comentarios-<%= _id %>">
        <!-- Os comentários serão carregados dinamicamente -->
    </ul>

    <!-- Formulário para novo comentário -->
    <form class="form-comentario" data-post-id="<%= _id %>">
        <input type="text" name="texto" placeholder="Comente algo..." required>
        <label for="anonimo-<%= _id %>">
            <input type="checkbox" name="anonimo" id="anonimo-<%= _id %>">
            Comentar como anônimo
        </label>
        <button type="submit">Enviar Comentário</button>
    </form>

    <button 
        class="like-btn"
        data-post-id="<%= _id %>"
        data-curtiu="<%= userCurtiu %>">
        <% if (userCurtiu) { %>
            <i class="fas fa-heart" style="color: red;"></i>
        <% } else { %>
            <i class="far fa-heart"></i>
        <% } %>
        <span class="like-count"><%= totalLikes %></span>
    </button>

    <hr>
</li>

