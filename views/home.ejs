                    <div class="feliz">
                        <svg width="70" height="70" viewBox="0 0 70 70">
                            <circle cx="35" cy="35" r="35" fill="#DED48A" />
                        </svg>
                    </div>
                    <div class="contente">
                        <svg width="70" height="70" viewBox="0 0 70 70">
                            <circle cx="35" cy="35" r="35" fill="#B0DDB5" />
                        </svg>
                    </div>
                    <div class="neutro">
                        <svg width="70" height="70" viewBox="0 0 70 70">
                            <circle cx="35" cy="35" r="35" fill="#DDDADA" />
                        </svg>
                    </div>
                </div>
                <div class="row">
                    <div class="triste">
                        <svg width="70" height="70" viewBox="0 0 70 70">
                            <circle cx="35" cy="35" r="35" fill="#B1BDD9" />
                        </svg>
                    </div>
                    <div class="ansioso">
                        <svg width="70" height="70" viewBox="0 0 70 70">
                            <circle cx="35" cy="35" r="35" fill="#C5B9DD" />
