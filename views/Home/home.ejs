<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Home | Dialoga</title>
    <link rel="stylesheet" href="css/styleGlobal.css">
    <link rel="stylesheet" href="css/styleComponents.css">
    <link rel="stylesheet" href="css/pages/styleHome.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="home-page"> 
    <%- include('../partials/header') %> 
    
    <div class="container home-content">
        <!-- Seção de Boas-vindas -->
        <div class="welcome-section">
            <div class="welcome-card">
                <h1 class="welcome-title">Olá, <%= username %>!</h1>
                <p class="welcome-subtitle">Como você está se sentindo hoje?</p>
                <div class="motivational-quote">
                    <i class="fas fa-quote-left quote-icon"></i>
                    <p class="quote-text" id="dailyQuote">Cada dia é uma nova oportunidade para crescer e se descobrir.</p>
                </div>
            </div>
        </div>

        <!-- Seleção de Humor -->
        <div class="mood-section">
            <h2 class="section-title">Registre seu humor</h2>
            <div class="emotion-selection-grid">
                <div class="emotion-circle mood-yellow" data-humor="feliz" title="Feliz">
                    <i class="fas fa-smile"></i>
                    <span>Feliz</span>
                </div>
                <div class="emotion-circle mood-green" data-humor="contente" title="Contente">
                    <i class="fas fa-grin"></i>
                    <span>Contente</span>
                </div>
                <div class="emotion-circle mood-default" data-humor="neutro" title="Neutro">
                    <i class="fas fa-meh"></i>
                    <span>Neutro</span>
                </div>
                <div class="emotion-circle mood-blue" data-humor="triste" title="Triste">
                    <i class="fas fa-frown"></i>
                    <span>Triste</span>
                </div>
                <div class="emotion-circle mood-purple" data-humor="ansioso" title="Ansioso">
                    <i class="fas fa-dizzy"></i>
                    <span>Ansioso</span>
                </div>
                <div class="emotion-circle mood-red" data-humor="raivoso" title="Raivoso">
                    <i class="fas fa-angry"></i>
                    <span>Raivoso</span>
                </div>
            </div>
        </div>

        <!-- Acesso Rápido -->
        <div class="quick-access-section">
            <h2 class="section-title">Acesso Rápido</h2>
            <div class="quick-access-grid">
                <a href="/LerDiario" class="quick-access-card diary-card">
                    <div class="card-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h3>Meu Diário</h3>
                    <p>Registre seus pensamentos e sentimentos</p>
                </a>
                
                <a href="/Comunidade" class="quick-access-card community-card">
                    <div class="card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>Comunidade</h3>
                    <p>Conecte-se com outras pessoas</p>
                </a>

                <a href="/Andamento" class="quick-access-card chat-card">
                    <div class="card-icon">
                        <i class="fas fa-comment-dots"></i>
                    </div>
                    <h3>Chat de Apoio</h3>
                    <p>Converse com nosso assistente</p>
                </a>
                
                <a href="/Andamento" class="quick-access-card meditation-card">
                    <div class="card-icon">
                        <i class="fas fa-heartbeat"></i>
                    </div>
                    <h3>Meditação</h3>
                    <p>Exercícios de relaxamento</p>
                </a>
            </div>
        </div>

        <!-- Estatísticas Pessoais -->
        <div class="stats-section">
            <h2 class="section-title">Seu Progresso</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">7</h3>
                        <p class="stat-label">Dias consecutivos</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">23</h3>
                        <p class="stat-label">Entradas no diário</p>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="stat-content">
                        <h3 class="stat-number">85%</h3>
                        <p class="stat-label">Humor positivo</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dicas de Bem-estar -->
        <div class="wellness-section">
            <h2 class="section-title">Dica do Dia</h2>
            <div class="wellness-card">
                <div class="wellness-icon">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <div class="wellness-content">
                    <h3>Pratique a Gratidão</h3>
                    <p>Dedique alguns minutos para refletir sobre três coisas pelas quais você é grato hoje. A gratidão pode melhorar significativamente seu bem-estar mental.</p>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Array de frases motivacionais
        const motivationalQuotes = [
            "Cada dia é uma nova oportunidade para crescer e se descobrir.",
            "Você é mais forte do que imagina e mais capaz do que acredita.",
            "O autocuidado não é egoísmo, é necessidade.",
            "Pequenos passos todos os dias levam a grandes mudanças.",
            "Sua jornada é única e valiosa, celebre cada progresso.",
            "A coragem não é a ausência do medo, mas agir apesar dele.",
            "Você merece amor, especialmente o seu próprio.",
            "Cada respiração é uma chance de recomeçar.",
            "Sua saúde mental importa tanto quanto sua saúde física.",
            "Hoje é um bom dia para ser gentil consigo mesmo."
        ];

        // Função para exibir frase aleatória
        function displayRandomQuote() {
            const quoteElement = document.getElementById('dailyQuote');
            const randomIndex = Math.floor(Math.random() * motivationalQuotes.length);
            quoteElement.textContent = motivationalQuotes[randomIndex];
        }

        // Função para lidar com seleção de humor
        function handleMoodSelection() {
            const emotionCircles = document.querySelectorAll('.emotion-circle');
            
            emotionCircles.forEach(circle => {
                circle.addEventListener('click', function() {
                    // Remove seleção anterior
                    emotionCircles.forEach(c => c.classList.remove('selected'));
                    
                    // Adiciona seleção atual
                    this.classList.add('selected');
                    
                    const mood = this.dataset.humor;
                    
                    console.log('Humor selecionado:', mood);
                    
                    // Feedback visual
                    this.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 200);
                });
            });
        }

        // Animação de entrada para os cards
        function animateCards() {
            const cards = document.querySelectorAll('.quick-access-card, .stat-card, .wellness-card');
            
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        }

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            displayRandomQuote();
            handleMoodSelection();
            animateCards();
        });
    </script>
</body>
</html>